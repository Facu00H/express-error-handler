{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,           // Generate .d.ts files for type declarations
    "declarationMap": true,        // Optional: Generate source maps for the .d.ts files
    "sourceMap": true,             // Generate source maps for the .js files
    "target": "ES2019",            // JavaScript target version
    "module": "commonjs",          // Module system for Node.js
    "strict": true,                // Enable strict type checking
    "esModuleInterop": true,       // Enables interoperability with CommonJS modules
    "skipLibCheck": true           // Skip checking of declaration files
  },
  "include": ["src/**/*"],          // Specify which files to compile
  "exclude": ["node_modules", "dist"]
}
